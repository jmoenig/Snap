<help-screen version="1">
    <thumbnail>
        <script>
            <block s="reportNot">
                <l/>
            </block>
        </script>
    </thumbnail>
    <box color="gray">
        <column>
            <diagram>
                <script>
                    <block s="doForever">
                        <script>
                            <block s="doIf" annotation="1">
                                <block s="reportNot">
                                    <block s="reportTouchingObject">
                                        <l>Sprite(2)</l>
                                    </block>
                                </block>
                                <script>
                                    <block s="doFaceTowards" annotation="2">
                                        <l>Sprite(2)</l>
                                    </block>
                                    <block s="forward">
                                        <l>10</l>
                                    </block>
                                </script>
                            </block>
                        </script>
                    </block>
                </script>
                <annotations>
                    <small-p>If not touching Sprite(2)</small-p>
                    <small-p>Then try to reach it</small-p>
                </annotations>
            </diagram>
        </column>
    </box>
</help-screen>
