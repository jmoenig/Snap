    <thumbnail>
        <script>
            <block s="changeSize">
                <l/>
            </block>
        </script>
    </thumbnail>
    <box color="gray">
        <row>
            <diagram rel-width="1">
                <script>
                    <block s="changeSize" annotation="1">
                        <l/>
