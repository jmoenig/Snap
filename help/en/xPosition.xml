<help-screen version="1">
    <thumbnail>
        <script>
            <block s="xPosition"/>
        </script>
    </thumbnail>
    <box color="gray">
        <column>
            <diagram>
                <script>
                    <block s="doForever">
                        <script>
                            <block s="doIf" annotation="1">
                                <block s="reportGreaterThan">
                                    <block s="xPosition"/>
                                    <l>200</l>
                                </block>
                                <script>
                                    <block s="bubble" annotation="2">
                                        <l>You win!</l>
                                    </block>
                                </script>
                            </block>
                        </script>
                    </block>
                </script>
                <annotations>
                    <small-p>If x position is greater than 200</small-p>
                    <small-p>Then do this</small-p>
                </annotations>
            </diagram>
            <img src="xPosition_stage.png" width="234" height="101"/>
        </column>
    </box>
    <box color="blue">
        <row>
            <img src="xPosition_watcher.png" width="136" height="21"/>
            <column rel-width="1">
                <p>
                    To see this sprite's x position, click the checkbox next
                    to the block.
                </p>
                <row padding="3">
                    <img src="checkbox.png" width="15" height="15"/>
                    <script>
                        <block s="xPosition"/>
                    </script>
                </row>
            </column>
        </row>
    </box>
</help-screen>
