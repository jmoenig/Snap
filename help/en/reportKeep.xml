<help-screen version="1">
    <thumbnail>
        <script>
            <block s="reportKeep">
                <block s="reifyPredicate">
                    <script/>
                    <list/>
                </block>
                <l/>
            </block>
        </script>
    </thumbnail>
    <box color="gray">
        <column>
            <diagram>
                <script>
                    <block s="reportKeep" bubble="1">
                        <block s="reifyPredicate">
                            <autolambda>
                                <block s="reportIsA">
                                    <l/>
                                    <l><option>number</option></l>
                                </block>
                            </autolambda>
                            <list/>
                        </block>
                        <block s="reportNewList">
                            <list>
                                <l>4</l>
                                <l>calling</l>
                                <l>birds</l>
                                <l>3</l>
                                <l>french</l>
                                <l>hens</l>
