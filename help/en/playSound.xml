<help-screen version="1">
    <thumbnail>
        <script>
            <block s="playSound">
                <l/>
            </block>
        </script>
    </thumbnail>
    <box color="gray">
        <column>
            <diagram>
                <script>
                    <block s="receiveKey" annotation="1">
                        <l><option>space</option></l>
                    </block>
                    <block s="playSound" annotation="2">
                        <l>laugh</l>
                    </block>
