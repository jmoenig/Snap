    <thumbnail>
        <script>
            <block s="turnLeft">
                <l/>
            </block>
        </script>
    </thumbnail>
    <box color="gray">
        <column>
            <diagram>
                <script>
                    <block s="turn" annotation="1">
                        <l>30</l>
                    </block>
                </script>
                <annotations>
                    <small-p>Rotate this much</small-p>
                </annotations>
            </diagram>
            <diagram>
                <script>
                    <block s="turnLeft" annotation="1">
